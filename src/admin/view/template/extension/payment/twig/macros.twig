{% macro input(name, id, value, label, error, required=false) %}
    <div class="form-group{{ required ? ' required' }}">
        <label class="col-sm-2 control-label" for="{{ id }}">{{ label }}</label>
        <div class="col-sm-10">
            <input type="text" name="{{ name }}" value="{{ value }}" placeholder="{{ entry_merchant_id }}" id="{{ id }}" class="form-control"/>
            {% if error_merchant_id %}
                <div class="text-danger">{{ error_merchant_id }}</div>
            {% endif %}
        </div>
    </div>
{% endmacro %}